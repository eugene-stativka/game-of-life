{
  "name": "game-of-life-ts",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "https://github.com/stativka/game-of-life-ts.git",
  "license": "MIT",
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "parcel-bundler": "^1.11.0",
    "prettier": "1.15.3",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts}": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "start": "parcel index.html",
    "build": "parcel build index.html",
    "lint": "tslint ./src/**/*.ts"
  }
}
